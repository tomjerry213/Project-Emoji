<!--index.wxml-->

<!--这里以后可以设计一张好看的海报-->
<view class="header">
    <image class="poster" src="/images/poster.jpg" mode="scaleToFill"/>
</view>

<view class="search" bindtap="search">
    <!-- <icon class="searchicon" size='14' type='search'></icon> -->
    <input class="search_input" disabled placeholder="点击搜索表情包OvO🔍" bindtap='search'/>
    <view class="search_button" bindtap="search">搜表情</view>
</view>

<view class="page">
    
    <view class="page__hd">
        <view class="page_title">热门搜索</view>
        <view class="weui-grids">
            <view class="weui-grid hot_search_grid" wx:for="{{hot_searches}}">
                <text type="button" class="hot_search_word">{{item}}</text> 
            </view>
        </view>
    </view>

    <view class="page__hd">
        <view class="page_title">精选表情</view>
        <view class="weui-grids">
            <view class="weui-grid" wx:for="{{rec_routers}}" wx:key="name">
                <navigator url="{{item.url+'?name='+item.name}}">
                    <image class="grid_emoji" src="{{item.icon}}" mode="scaleToFill"/>
                    <text class="grid_label">{{item.name}}</text>
                </navigator>
            </view>
        </view>
    </view>

    <view class="page__hd">
        <view class="page_title">最近热门</view>
        <view class="weui-grids">
            <view class="weui-grid" wx:for="{{hot_routers}}" wx:key="name">
                <navigator url="{{item.url+'?name='+item.name}}">
                        <image class="grid_emoji" src=" {{item.icon}}" mode = "scaleToFill"/>
                        <text class="grid_label">{{item.name}}</text>
                </navigator>
            </view>
        </view>
    </view>

    <!--
        TODO: 等有素材之后，这里可以加上一些专题表情。比如熊猫头专题、柴犬专题等。
    -->
</view>
