.container {
  align-items:flex-start;
}
/*poster*/
view.header{
  width: 100%;
  height: 10rem;
  display: block;
  position: relative;
}

image.poster{
  width: 100%;
  top: 0px; height: 100%;
  display: block;
}

/*searchbar*/
.search{
  width: 90%;
  transform: translate(0, -50%);
  margin: 0 auto;
  padding: 0px;
  height: 2rem;
  text-align: center;
}

.search_input {
  width: 80%; height: fill;
  position: relative;
  padding: 3px;
  margin: 0px;
  display: inline-block;
  border: 1px gray solid;
  border-radius: 10px 10px 10px 10px;
  font-size: 14px;
  vertical-align: middle;
  box-shadow: 0px 0px 5px #888888;
  background-color: white;

}

.search_button{
  background-color: palevioletred;
  border: 1px gray solid;
  border-left: none;
  position: relative;
  width: 20%;
  height: fill;
  align-items: center;
  flex-direction: row;
  color: white;
  display: inline-block;
  font-weight: bolder;
  border-radius: 0px 10px 10px 0px;
  padding: auto;
  text-align: center;
  margin: 0px;
  padding: 3px;
  font-size: 14px;
  position: relative;
  vertical-align: middle;
  box-shadow: 0px 0px 5px #888888;
}

